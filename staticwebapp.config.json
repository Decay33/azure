{
  "platform": {
    "apiRuntime": "node:20"
  },
  "routes": [
    {
      "route": "/",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/ping",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/health",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/stripe/webhook",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/profile/*",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/checkHandle",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/trackView",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/*",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/dashboard",
      "allowedRoles": ["authenticated"],
      "rewrite": "/index.html"
    },
    {
      "route": "/dashboard/*",
      "allowedRoles": ["authenticated"],
      "rewrite": "/index.html"
    },
    {
      "route": "/:handle",
      "allowedRoles": ["anonymous"],
      "rewrite": "/index.html"
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html"
  },
  "responseOverrides": {
    "401": {
      "redirect": "/.auth/login/google",
      "statusCode": 302
    }
  },
  "globalHeaders": {
    "Cache-Control": "public, max-age=3600",
    "X-Frame-Options": "SAMEORIGIN",
    "X-Content-Type-Options": "nosniff",
    "Referrer-Policy": "strict-origin-when-cross-origin",
    "Permissions-Policy": "geolocation=(), microphone=(), camera=()"
  },
  "mimeTypes": {
    ".webm": "video/webm",
    ".mp4": "video/mp4"
  },
  "auth": {
    "identityProviders": {
      "azureActiveDirectory": {
        "registration": {
          "openIdIssuer": "https://{AADB2C_TENANT_NAME}.b2clogin.com/{AADB2C_TENANT_NAME}.onmicrosoft.com/{AADB2C_SIGNUP_SIGNIN_POLICY}/v2.0",
          "clientIdSettingName": "AADB2C_CLIENT_ID",
          "clientSecretSettingName": "AADB2C_CLIENT_SECRET"
        }
      },
      "google": {
        "registration": {
          "clientIdSettingName": "GOOGLE_CLIENT_ID",
          "clientSecretSettingName": "GOOGLE_CLIENT_SECRET"
        }
      }
    }
  }
}
