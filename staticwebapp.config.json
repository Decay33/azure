{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/images/*", "/css/*", "/js/*"]
  },
  "routes": [
    { "route": "/api/deployments/*", "allowedRoles": ["anonymous"] },
    { "route": "/api/health/*",      "allowedRoles": ["anonymous"] },
    { "route": "/api/*",             "allowedRoles": ["authenticated"] },
    { "route": "/members/*",         "allowedRoles": ["authenticated"] }
  ],
  "auth": {
    "identityProviders": {
      "google": {
        "registration": {
          "clientIdSettingName": "GOOGLE_CLIENT_ID",
          "clientSecretSettingName": "GOOGLE_CLIENT_SECRET"
        },
        "login": {
          "scopes": ["openid", "profile", "email"]
        }
      }
    }
  },
  "platform": {
    "apiRuntime": "node:18"
  },
  "mimeTypes": {
    ".wasm": "application/wasm"
  }
}
