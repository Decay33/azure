{
  "platform": {
    "apiRuntime": "node:20"
  },
  "routes": [
    {
      "route": "/api/*",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/*",
      "serve": "/index.html",
      "statusCode": 200
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/api/*", "/assets/*", "/*.{css,js,map}"]
  },
  "responseOverrides": {},
  "globalHeaders": {
    "Cache-Control": "no-cache"
  },
  "mimeTypes": {
    ".js": "text/javascript",
    ".css": "text/css",
    ".json": "application/json"
  },
  "auth": {
    "identityProviders": {
      "azureActiveDirectory": {
        "registration": {
          "openIdIssuer": "https://yoursociallinks.b2clogin.com/yoursociallinks.onmicrosoft.com/B2C_1_signupsignin/v2.0",
          "clientIdSettingName": "AADB2C_CLIENT_ID",
          "clientSecretSettingName": "AADB2C_CLIENT_SECRET"
        }
      }
    }
  }
}
