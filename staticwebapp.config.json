{
  "platform": {
    "apiRuntime": "node:20"
  },
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/assets/*", "/api/*"]
  },
  "routes": [
    {
      "route": "/api/health",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/checkHandle/*",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/getProfile/*",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/trackView/*",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/ping",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/*",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/dashboard*",
      "allowedRoles": ["authenticated"]
    }
  ],
  "responseOverrides": {
    "401": {
      "redirect": "/login",
      "statusCode": 302
    }
  },
  "globalHeaders": {
    "Cache-Control": "no-cache"
  },
  "auth": {
    "identityProviders": {
      "customOpenIdConnectProviders": {
        "externalid": {
          "registration": {
            "clientIdSettingName": "EXTERNALID_CLIENT_ID",
            "clientCredential": {
              "clientSecretSettingName": "EXTERNALID_CLIENT_SECRET"
            },
            "openIdConnectConfiguration": {
              "wellKnownOpenIdConfiguration": "https://yoursociallinks.ciamlogin.com/yoursociallinks.onmicrosoft.com/signupsignin/v2.0/.well-known/openid-configuration"
            }
          },
          "login": {
            "nameClaimType": "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/name",
            "scopes": ["openid", "profile", "email"]
          }
        }
      }
    }
  }
}
